@model Tuple<IEnumerable<WebStokYApp.Models.Entities.Customer>, IEnumerable<WebStokYApp.Models.Entities.Product>>

@{
    Layout = "~/Views/Admin/AdminSidebar.cshtml";
}

<h2 class="text-center">Customer and Product List</h2>

<!-- Müşteri Tablosu -->
@if (Model.Item1 == null || !Model.Item1.Any())
{
    <p class="text-center">No customers found.</p>
}
else
{
    <div class="table-container">
        <h3 class="text-center">Customer List</h3>
        <table class="table table-bordered table-sm">
            <thead>
                <tr>
                    <th>Customer ID</th>
                    <th>Customer Name</th>
                    <th>Budget</th>
                    <th>Customer Type</th>
                    <th>Total Spent</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model.Item1)
                {
                    <tr>
                        <td>@customer.CustomerID</td>
                        <td>@customer.CustomerName</td>
                        <td>@customer.Budget</td>
                        <td>@customer.CustomerType</td>
                        <td>@customer.TotalSpent</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<!-- Ürün Tablosu -->
@if (Model.Item2 == null || !Model.Item2.Any())
{
    <p class="text-center">No products found.</p>
}
else
{
    <div class="table-container">
        <h3 class="text-center">Product List</h3>
        <table class="table table-bordered table-sm">
            <thead>
                <tr>
                    <th>Product ID</th>
                    <th>Product Name</th>
                    <th>Stock</th>
                    <th>Price (TL)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Item2)
                {
                    <tr>
                        <td>@product.ProductID</td>
                        <td>@product.ProductName</td>
                        <td>@product.Stock</td>
                        <td>@product.Price</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<style>
    /* Tabloyu sayfa ortasına yerleştiriyoruz */
    .table-container {
        width: 80%; /* Tablo genişliğini azaltıyoruz */
        margin: 20px auto; /* Sayfanın ortasında yer almasını sağlıyoruz */
        padding: 20px 0;
    }

    /* Tabloyu daha küçük ve okunabilir yapıyoruz */
    .table {
        font-size: 14px; /* Yazı tipini küçültüyoruz */
    }

    /* Tablo kenarlıklarını daha belirgin hale getiriyoruz */
    .table-bordered th, .table-bordered td {
        border: 1px solid #ddd;
    }

    /* Başlık kısmının daha dikkat çekici olması için biraz stil ekliyoruz */
    h2, h3 {
        margin-bottom: 20px;
    }

    /* Tablonun daha kompakt görünmesini sağlıyoruz */
    .table-sm td, .table-sm th {
        padding: 0.5rem; /* Hücrelerdeki padding'i azaltıyoruz */
    }
</style>
