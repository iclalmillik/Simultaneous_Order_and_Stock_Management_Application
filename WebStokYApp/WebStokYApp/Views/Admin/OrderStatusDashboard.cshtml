@{
    var orders = ViewData["OrderStatuses"] as IEnumerable<dynamic>;
}

<h2>Order Status Dashboard</h2>

<table border="1" style="width: 100%; border-collapse: collapse;">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer Name</th>
            <th>Order Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in orders)
        {
            var color = order.OrderStatus switch
            {
                "Pending" => "yellow",
                "Processing" => "blue",
                "Completed" => "green",
                _ => "gray"
            };

            <tr>
                <td>@order.OrderID</td>
                <td>@order.CustomerName</td>
                <td style="background-color: @color; color: white; text-align: center;">
                    @order.OrderStatus
                </td>
            </tr>
        }
    </tbody>
</table>
